{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@channels/*": ["channels/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@helpers/*": ["helpers/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@renderer/*": ["renderer/"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "public"
  ]
}
