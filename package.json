{
  "name": "ISGeA",
  "version": "1.0.0",
  "description": "Aplicação desenvolvida para automação de separação das intimações provenientes de IS, cadastro e validação.",
  "main": "dist/src/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watchAll --detectOpenHandles",
    "build": "npm run clean && babel src --extensions \".ts,.tsx,.js\" --out-dir dist/src --source-maps inline",
    "start": "npm run build && electron .",
    "package": "cross-env NODE_ENV=production npm run build && electron-forge package",
    "make": "cross-env NODE_ENV=production npm run build && electron-forge make",
    "publish": "electron-forge publish"
  },
  "author": "Yuri Dias Pereira Gomes",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "axios-retry": "^4.5.0",
    "dotenv": "^17.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "html-to-docx": "^1.8.0",
    "iconv-lite": "^0.7.0",
    "jsdom": "^27.0.0",
    "mammoth": "^1.10.0",
    "officegen": "^0.6.5",
    "pdf2json": "^3.1.4",
    "pizzip": "^3.1.7",
    "update-electron-app": "^3.1.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.3.1",
    "@electron-forge/publisher-github": "^7.9.0",
    "@types/electron": "^1.6.10",
    "@types/html-to-docx": "^1.8.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.1",
    "babel-jest": "^30.1.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "^10.0.0",
    "electron": "^38.1.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuridiasp/Projeto-ISGenerateApp.git"
  }
}
